<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imgDtHead"
        android:layout_width="40.5dp"
        android:layout_height="40.5dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        tools:src="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/imgAuth"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintEnd_toEndOf="@id/imgDtHead"
        app:layout_constraintBottom_toBottomOf="@id/imgDtHead" />

    <TextView
        android:id="@+id/tvDtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14.5sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1.5dp"
        app:layout_constraintStart_toEndOf="@id/imgDtHead"
        app:layout_constraintTop_toTopOf="@id/guidelineTop"
        android:includeFontPadding="false"
        android:textColor="@color/_xpopup_white_color"
        tools:text="花仙子"/>


    <TextView
        android:id="@+id/tvDtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvDtName"
        app:layout_constraintBottom_toBottomOf="@id/imgDtHead"
        android:includeFontPadding="false"
        android:textSize="11.0sp"
        android:textColor="#9998A0"
        android:layout_marginBottom="0.5dp"
        android:layout_marginStart="15dp"
        tools:text="5分钟前"/>

    <ImageView
        android:id="@+id/imgDtMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        android:paddingStart="8dp"
        android:paddingBottom="8dp"
        android:paddingTop="3dp"
        android:src="@drawable/dot_normal"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constraintTop_toTopOf="@id/tvDtName" />

    <TextView
        android:id="@+id/tvDtContent"
        app:layout_constraintTop_toBottomOf="@+id/imgDtHead"
        android:layout_marginTop="13.5dp"
        app:layout_constraintStart_toStartOf="@id/imgDtHead"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:layout_constrainedWidth="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_xpopup_white_color"
        app:layout_constraintHorizontal_bias="0"
        android:paddingStart="1.5dp"
        android:paddingEnd="1dp"
        android:textSize="14sp"
        tools:text="6546546544" />

    <com.zejian.myapplication.widget.pyq.MomentView
        android:id="@+id/nineGrid"
        app:layout_constraintTop_toBottomOf="@id/tvDtContent"
        android:layout_marginTop="13.5dp"
        app:layout_constraintStart_toStartOf="@id/imgDtHead"
        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
        app:ngv_gridSpacing="6dp"
        app:ngv_singleImageSize="180dp"
        app:layout_constrainedWidth="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/layoutVoice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imgDtHead"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="3dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvDtContent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="15.5dp"
            android:paddingEnd="16dp"
            android:background="@drawable/shape_voice">

            <ImageView
                android:id="@+id/imgDtVoicePlay"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="5dp"
                android:src="@drawable/dt_voice_play"/>

            <ImageView
                android:id="@+id/imgPlayAnim"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/imgDtVoicePlay"
                android:layout_marginStart="12dp"
                android:src="@drawable/recording_volume"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvSeconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgPlayAnim"
                tools:text="00:14"
                android:layout_marginStart="16dp"
                android:textSize="15.5sp"
                android:textColor="@color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>




    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="15dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineEnd"
        app:layout_constraintGuide_end="13dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineTop"
        app:layout_constraintGuide_begin="12dp"
        android:orientation="horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>