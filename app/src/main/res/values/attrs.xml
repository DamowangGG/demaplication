<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Switch">
        <attr name="checked" format="reference|boolean"/>
        <attr name="switchOnColor" format="reference|color"/>
        <attr name="switchOffColor" format="reference|color"/>
        <attr name="spotOnColor" format="reference|color"/>
        <attr name="spotOnColorIn" format="reference|color"/>
        <attr name="spotOffColor" format="reference|color"/>
        <attr name="spotOffColorIn" format="reference|color"/>
        <attr name="switchOnStrokeColor" format="reference|color"/>
        <attr name="switchOffStrokeColor" format="reference|color"/>
        <attr name="spotPadding" format="reference|dimension"/>
        <attr name="duration" format="reference|integer" />
    </declare-styleable>

    <declare-styleable name="CutoutImage">
        <attr name="bottomCut" format="dimension" />
        <attr name="endCut" format="dimension" />
        <attr name="cutoutColor" format="color" />
    </declare-styleable>

    <style name="LoadingDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <declare-styleable name="CircleImageView">
        <attr name="civ_border_widths" format="dimension" />
        <attr name="civ_border_colors" format="color" />
        <attr name="civ_border_overlays" format="boolean" />
        <attr name="civ_circle_background_colors" format="color" />
    </declare-styleable>


    <attr name="SpinKitViewStyle" format="reference" />

    <declare-styleable name="SpinKitView">
        <attr name="SpinKit_Style">
            <enum name="Circle" value="0" />
            <enum name="FadingCircle" value="1" />
        </attr>
        <attr name="SpinKit_Color" format="color" />
    </declare-styleable>

    <declare-styleable name="ExpandText">
        <attr name="show_width" format="dimension"/>
        <attr name="default_open" format="boolean"/>
        <attr name="close_end_text" format="string"/>
        <attr name="close_end_text_color" format="color"/>
        <attr name="open_end_text" format="string"/>
        <attr name="open_end_text_color" format="color"/>
        <attr name="ellipse_text" format="string"/>
        <attr name="allow_anim" format="boolean"/>
        <attr name="anim_during" format="integer"/>
        <attr name="limit_line" format="integer"/>
    </declare-styleable>


    <declare-styleable name="AutoPlayRecyclerView">
        <attr name="timeInterval" format="integer" />
        <attr name="direction" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

</resources>